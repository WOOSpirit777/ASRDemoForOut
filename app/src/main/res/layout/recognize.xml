<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="模型识别"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_init_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="初始化模型" />

        <Button
            android:id="@+id/btn_mic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_start_mic" />

        <ToggleButton
            android:id="@+id/toggle_pause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="@string/toggle_pause_off"
            android:textOff="@string/toggle_pause_on" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="文件识别"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_pick_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择文件" />

        <Button
            android:id="@+id/btn_start_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始文件识别" />

        <Button
            android:id="@+id/btn_stop_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="停止文件识别" />


        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#00Ff00"
            android:text=""
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/tv_partial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:lines="12"
            android:paddingTop="8dp" />

    </LinearLayout>
</ScrollView>
